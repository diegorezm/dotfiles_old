#!/bin/bash 
cd $HOME/img/wallpapers
wall_eng(){
        list=$(ls $HOME/img/wallpapers/*.{jpg,jpeg,png}| awk -F/ '{print $NF}')
        for i in $list;do
                echo "  $i" 
        done
}
chs=$(wall_eng | dmenu -l 10 -p 'Choose one:' | xargs) 
case "$chs" in
  "")  exit
  ;;
esac

declare op=(" Yes 
 No")
sxiv -b ${chs#* } & sr=$(echo -e "${op[@]}" | dmenu -l 10 -p 'Sure:')  

if  [ ${sr#* } == 'Yes' ]  ; then 
  changer ${chs#* }
  killall sxiv && exit 0
else
  killall sxiv 
fi
