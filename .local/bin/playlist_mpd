#!/bin/bash 

play_list(){
        num=$(mpc lsplaylists | sort -n |rofi -dmenu -theme "drofi" -p 'Choose one:')
        if [ -z "$num" ];then
                 dunstify "ERRO!" && exit 0
        else
                mpc clear 
                mpc load $num 
                mpc play 1
        fi
}

play_list
